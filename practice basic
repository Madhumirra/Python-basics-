#  Even or Odd
num = int(input("Enter a number: "))
if num % 2 == 0:
    print("Even")
else:
    print("Odd")

print("\n---\n")

# Factorial
n = int(input("Enter number for factorial: "))
fact = 1
for i in range(1, n + 1):
    fact *= i
print("Factorial:", fact)

print("\n---\n")

#  Palindrome Check
text = input("Enter a word: ")
if text == text[::-1]:
    print("Palindrome")
else:
    print("Not palindrome")
